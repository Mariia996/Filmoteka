<img class="film-info__img film-info__box-card" src="https://image.tmdb.org/t/p/w300{{poster_path}}" alt="{{title}}" />

<div class="film-info__box-card">
    <h2 class="film-info__title">{{original_title}}</h2>
    <ul class="film-info__list list">
        <li class="film-info__list-item">
            <span class="film-info__list-item--vote">Vote / Votes</span>
            <span class="film-info__list-item--characteristic">
                <span class="film-info__list-item--votes">{{vote_average}}</span>
                <span class="film-info__list-item--slash">/</span>
                <span class="film-info__list-item--count">{{vote_count}}</span>
            </span>
        </li>
        <li class="film-info__list-item">
            <span class="film-info__list-item--vote">Popularity</span>
            <span class="film-info__list-item--characteristic">{{popularity}}</span>
        </li>
        <li class="film-info__list-item">
            <span class="film-info__list-item--vote">Original Title</span>
            <span class="film-info__list-item--characteristic">{{original_title}}</span>
        </li>
        <li class="film-info__list-item">
            <span class="film-info__list-item--vote">Genre</span>
            <span class="film-info__list-item--characteristic">{{genres}}</span>
        </li>
    </ul>

    <h3 class="film-info__about--title">About</h3>
    <p class="film-info__text">
        {{overview}}
    </p>
    <div class="film-info-actions">
        <button class="btn btn-outline film-info__button btn-watched">add to Watched</button>
        <button class="btn btn-outline film-info__button btn-queue">add to queue</button>
    </div>